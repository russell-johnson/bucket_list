<div class="section">
  <h2>Welcome</h2>
  <h5><%= current_user.first_name %></h5>
</div>
<div class="divider"></div>
<div class="valign-wrapper">
  <% if @b_lists.any? %>
    <div class="row">
      <% @b_lists.each do |b| %>
        <div class="col s4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <div class="card small">
                <h4 class="valign">
                  <%= link_to "#{b.name}", b_list_path(b.id) %>
                </h4>
              </div>
            </div>
            <div class="card-action">
              <%= link_to "Edit" %>
              <%= link_to "Delete" %>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
  <% end %>
</div>