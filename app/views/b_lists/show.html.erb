<h1><%= "#{@b_list.name}" %></h1>



<% if @items.any? %>
  <% @items.each do |item| %>
    <p>name: <%= item.name %></p>
    <p>Due Date: <%= item.due_date %></p>
    <p>location: <%= item.location %></p>
    <%= link_to '|  Edit Item  |', edit_b_list_item_path(@b_list, item) %>
    <%= link_to ' Delete Item! |', b_list_item_path(@b_list, item), method: :delete %>
  <% end %>
<% else %>
  <%= link_to 'Add Item', new_b_list_item_path(@b_list) %>
<% end %>
