<h2 class="grey-text text-lighten-3">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
  <div class="field">
    <h5 class="grey-text text-darken-2">E-mail</h5>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <h5 class="grey-text text-darken-2">Password</h5>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="center-align">
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div>
  <br/>

  <div class="center-align">
  <div a class="waves-effect waves-light grey btn-large"></a>
    <div class="actions">
  </div>
      <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
