<h2 class="grey-text text-lighten-3">Sign Up </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">    
        <div class="field">
          <h5 class="grey-text text-darken-2">First Name</h5>
            <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>
        <div class="input-field col s6">
          <div class="field">    
            <h5 class="grey-text text-darken-2">Last Name</h5>
              <%= f.text_field :last_name %>
          </div>
        </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <div class="field">
          <h5 class="grey-text text-darken-2">E-mail</h5>
            <%= f.email_field :email %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <div class="field">
          <h5 class="grey-text text-darken-2">Password</h5>
            <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
        <div class="input-field col s6">
          <div class="field">
            <h5 class="grey-text text-darken-2">Password Confirmation</h5>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
      </div>
    </div>
  </form>
  <div class="center-align">
  <div a class="waves-effect waves-light grey btn-large"></a>
    <div class="actions">
  </div>
      <%= f.submit "Sign Up" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
